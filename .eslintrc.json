{
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "standard",
    "plugin:jest/all"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "object-curly-spacing": ["error", "never"],
    "jest/prefer-expect-assertions": "off",
    "no-func-assign": "off",
    "comma-dangle": ["error", "always-multiline"]
  },
  "plugins": [
    "jest"
  ]
}